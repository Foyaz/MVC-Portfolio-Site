                        <div class="row">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 1:
                                    </div>
                                    <div class="col-md-6">
                                        <input id="number1" type="number" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 2:
                                    </div>
                                    <div class="col-md-6">
                                        <input id="number2" type="number" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 3:
                                    </div>
                                    <div class="col-md-6">
                                        <input id="number3" type="number" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 4:
                                    </div>
                                    <div class="col-md-6">
                                        <input id="number4" type="number" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 5:
                                    </div>
                                    <div class="col-md-6">
                                        <input id="number5" type="number" />
                                    </div>
                                </div>
