    ViewBag.Title = "JSExercise";
}

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">JavaScript Exercises</button>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#math">Math</a></li>
                    <li><a data-toggle="tab" href="#factorial">Factorial</a></li>
                    <li><a data-toggle="tab" href="#FizzBuzz">FizzBuzz</a></li>
                    <li><a data-toggle="tab" href="#palindrome">Palindrome</a></li>
                </ul>
                <div class="tab-content">
                    <div id="math" class="tab-pane fade in active">
                        <h3>Fun With Numbers</h3>
