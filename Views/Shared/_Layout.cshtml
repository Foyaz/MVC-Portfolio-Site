    @section scripts {

        <script>
            //caculate
            $("#math").click(function () {
                //First we need to get the user input
                const number1 = Number($("#number1").val());
                const number2 = Number($("#number2").val());
                const number3 = Number($("#number3").val());
                const number4 = Number($("#number4").val());
                const number5 = Number($("#number5").val());
                //next we need to perform the necessary calculations
                const add = number1 + number2 + number3 + number4 + number5;
                const multiply = number1 * number2 * number3 * number4 * number5;
                const smallest = Math.min(number1, number2, number3, number4, number5);
                const largest = Math.max(number1, number2, number3, number4, number5);
                const average = add / 5;
                //finally we need to ouput the ress
                $("#add").text("The sum is: " + add);
                $("#multiply").text("The product is: " + multiply);
                $("#smallest").text("The smallest number is: " + smallest);
                $("#largest").text("The largest number is: " + largest);
                $("#average").text("The average is: " + average);
            });
            //factorial
            $("#factorial").click(function () {
                const factorialNum = Number($("#factorialNum").val());
                const answer;
                if (factorialNum === 0 || factorialNum === 1) {
                    answer = 1;
                } else if (factorialNum < 0) {
                    answer = "Enter a number greater than or equal to zero."
                } else if (factorialNum > 1) {
                    for (i = factorialNum - 1; i > 0; i--) {
                        factorialNum = factorialNum * i;
                        answer = factorialNum;
                    }
                }
                $("#res").text("Answer: " + answer);
            });
            //FizzBuzz
            $("#btnFizzBuzz").click(function () {
                const fizzNumber = Number($("#fizzNumber").val());
                const buzzNumber = Number($("#buzzNumber").val());
                const fizz;
                const buzz;
                for (const i = 1; i <= 100; i++) {
                    fizz = i % fizzNumber;
                    buzz = i % buzzNumber;
                    if (fizz === 0 && buzz === 0) {
                        $("#fizzBuzz").append("<span class='FizzBuzz'> FizzBuzz </span>");
                    }
                    else {
                        if (fizz === 0) {
                            $("#fizzBuzz").append("<span class='fizz'> Fizz </span>");
                        }
                        else if (buzz === 0) {
                            $("#fizzBuzz").append("<span class='buzz'> Buzz </span>");
                        } else if (fizz !== 0 && buzz !== 0) {
                            $("#fizzBuzz").append("<span>" + i + ' ' + "</span>");
                        }
                    }
                }
            });
            $("#btnErase").click(function () {
                $("#fizzBuzz").html("");
            });
            //palindrome
            $("#palindromebtn").click(function () {
                const sen = document.getElementById("paliandrome").value;
                const reverseSen;
                reverseSen = sen.split('').reverse().join('');
                if (sen == reverseSen) {
                    $("#yeppi").text(sen + " is a palindrome.");
                } else if (sen != reverseSen) {
                    $("#yeppi").text(sen + " is not a palindrome.");
                }
            });

        </script>
    }


